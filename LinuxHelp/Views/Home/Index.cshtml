@model LinuxHelp.Models.SearchCommand

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="panel-success">
        <div class="mt-5 panel-heading text-center">
            <h1>Введите команду</h1>
        </div>
        <div class="m-0 p-0 container-fluid">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group d-flex justify-content-center row" >
                    @Html.TextBoxFor(x => x.Command, new { @class = "col-4" })
                </div>
                <div class="text-center">
                    <input type="submit" value="Search" class="btn btn-success btn-sm-6" />
                </div>
            }
        </div>
    </div>
</body>
</html>